generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id            String          @id @default(cuid())
  email         String          @unique
  emailVerified DateTime?
  name          String?
  image         String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  
  // Relations
  items         Item[]
  borrowRequests BorrowRequest[] @relation("Borrower")
  receivedRequests BorrowRequest[] @relation("Owner")
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  
  @@unique([identifier, token])
}

model Item {
  id          String    @id @default(cuid())
  title       String
  description String?
  category    String    // "Tools", "Books", "Sports", etc.
  imageUrl    String?
  available   Boolean   @default(true)
  
  // Privacy-first location (rounded coordinates)
  latitude    Float     // Rounded to ~100m precision
  longitude   Float     // Rounded to ~100m precision
  
  ownerId     String
  owner       User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relations
  borrowRequests BorrowRequest[]
  
  @@index([latitude, longitude]) // For map queries
  @@index([ownerId])
}

model BorrowRequest {
  id        String   @id @default(cuid())
  status    String   @default("pending") // "pending", "approved", "denied", "completed"
  message   String?  // Optional message from borrower
  
  itemId    String
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  
  borrowerId String
  borrower   User    @relation("Borrower", fields: [borrowerId], references: [id], onDelete: Cascade)
  
  ownerId    String
  owner      User    @relation("Owner", fields: [ownerId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([itemId])
  @@index([borrowerId])
  @@index([ownerId])
}
